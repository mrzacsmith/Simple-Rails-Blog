<h1>Zac's Blog</h1>
<br>


<% @posts.each do |post| %>

<div>
    <h2 style="background-color: red;"><%= post.title %></h2>
</div>
<div style="background-color: blue; color: white;">
    <p><%= truncate(post.body, :length => 50 ) %></p>
    <br>
    <%= link_to "Read Post", post %>
</div>

<% end %>
